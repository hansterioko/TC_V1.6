<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/gradient_purchase_item">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <ImageView
            android:id="@+id/productItemView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            ></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productItemTitle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:textColor="#FFFF"
        android:text="TextView" />

    <TextView
        android:id="@+id/productItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:textColor="#FFFF"
        android:textSize="21sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/productItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="end"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/productItemCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="end"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:text="TextView" />

    <Button
        android:id="@+id/detailProductItemBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#ED8D00"
        android:layout_marginBottom="10dp"
        android:textSize="18dp"
        android:text="@string/detailBtn" />

</LinearLayout>